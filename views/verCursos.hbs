{{>headerLogin}}
<h1>Ver Cursos</h1>

 <div class="container">
    <div class="row">
        <div class="col-md-8 order-md-1">
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id Curso</th>
                    <th scope="col">Nombre</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cursos}}
                    <tr>
                    <th scope="row"></th>
                    <td>{{this.idCurso}}</td>
                    <td>{{this.nombre}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{>footer}}